<% if flash[:notice] %>
  <div class="alert">
    <%= notice %>
  </div>
<% end %>

<!--一覧画面-->
<h2>Books</h2>

<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %></td>
      <td><%= link_to "Edit",edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" %></td>
    </tr>
    <% end %>
</table>

<!--新規投稿-->
<h2>New book</h2>

<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <ul class="error-box">
    <h3 class="error-title">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </h3>
    <div class="error-message">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %><!--エラー-->

<!--入力フォーム-->
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <h4>Title<% :title %></h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="create">
    <%= f.submit'Create Book' %>
  </div>
<% end %><!--入力フォーム-->