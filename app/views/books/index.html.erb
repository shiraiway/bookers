<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <% @books.each do |book| %>
      
      <tb><%= @book.title %></tb>
      <tb><%= @book.body %></tb>
      <tb><%= link_to "Show",books_path(books.id) %></tb>
      <tb><%= link_to "Edit",books_path %></tb>
      <tb><%= link_to "Destroy",books_path %></tb>
      
      <% end %>
    </tr>
  </tbody>
</table>
