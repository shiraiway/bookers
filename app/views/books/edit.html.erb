<h2>Editing Book</h2>

<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
    
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
    
  <div class="update">
    <%= f.submit'Update Book' %>
  </div>
<% end %>

<%= link_to "Show",book_path(@book.id) %>
